.frame-layout
  height 100%
  background-color #FFF
  .frame-sider
    background-color #FFF
  .frame-menu
    height 100%
  .frame-content
    height 100%
    overflow-y auto

.stream-body
  height calc(100vh - 48px)
  .stream-leftNav
    background-color #FFF
  .stream-leftMenu
    height 100%
    .ant-menu-item:first-child
      margin-top 0
  .ant-menu-item
    i
      margin-right 8px
  .stream-content
    height 100%
    overflow auto

  .stream-leftNav-small
    .stream-leftMenu
      padding-top 0
      background-color #f8f8f8
    .ant-menu-item
      margin 0
      writing-mode tb-rl
      height auto
      text-align center
      padding 16px 8px !important
      line-height initial
      letter-spacing 4px
      width 32px
      color rgba(0,0,0,.65)
      transition none
      border-right unset
      margin-left unset
      left unset
      position unset
      z-index unset
      &:after
        border-right unset
    .ant-menu-item-selected
      background #fff
      border-right-color #fff
      border-top 1px solid #e9e9e9
      border-bottom 1px solid #e9e9e9
      color #5182e4
    .ant-menu-item:nth-child(1)
      border-top none
